#!/bin/zsh

function justizvpn() {
  # either JUSTIZ30 or JUS-DEV-EXT
  USERGROUP=$1
  # location of the config file
  JUSTIZVPN=$(head -n 1 $HOME/.justizvpn)
  VPN_USR=heidenst
  HOST_ADDRESS=vc1.justiz.gv.at:8443

  echo $JUSTIZVPN | sudo openconnect --user=$VPN_USR --usergroup=$USERGROUP --passwd-on-stdin $HOST_ADDRESS
}

justizvpn JUS-DEV-EXT

